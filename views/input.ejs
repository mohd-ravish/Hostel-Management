<%- include("partials/header"); -%>

    <title>Fee Structure</title>
    <style>
        :root {
            --color-success: #05865b;
            --color-white: #fff;
            --color-dark: #363949;
            --color-newgreen: rgba(13, 92, 26, 0.895);
             
        }

        .title {
            padding: 20px 0px 10px 0px;
            color: var(--color-success);
            font-weight: 450;
            font-size: 35px;
        }

        .input-box{
            padding-bottom: 10px;
        }

        .message {
            width: 40%;
            border: 1px solid #ccc;
            padding: 10px 15px;
            font-size: 15px;
            text-transform: none;
            outline: none;
            font-weight: 400;
            border-radius: 5px;
            border: 1px solid var(--color-dark);
            background-color: var(--color-white);
        }

        .submit-button {
            align-items: center;
            justify-content: center;
            height: 45px;
            max-width: 150px;
            width: 100%;
            border: none;
            outline: none;
            color: var(--color-white);
            border-radius: 5px;
            margin: 2px;
            background-color: var(--color-success);
            transition: all 0.3s linear;
            cursor: pointer;
        }

        .submit-button:hover {
            background-color: var(--color-newgreen);
        }
    </style>
    </head>

    <body>
        <%- include("partials/navbar"); -%>
            <form action="/input" method="POST">
                <div>
                    <div class="container">
                        <h3 class="title">Enter a message anonymously</h3>
                        <form action="#" method="POST">
                            <div class="input-box">
                                <input type="text" class="message" name="chat" placeholder="Enter a message..." autocomplete="off">
                            </div>
                            <button class="submit-button" type="submit">Submit</button>
                        </form>
                    </div>
                </div>
            </form>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="JS/mess.js" charset="utf-8"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                crossorigin="anonymous"></script>
    </body>